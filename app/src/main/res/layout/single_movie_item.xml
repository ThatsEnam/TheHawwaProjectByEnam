<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleMovieWrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_margin="0dp"
        android:background="@drawable/placeholder"
        android:contentDescription="@string/movie_thumnail"
        android:maxHeight="175dp"
        android:padding="0dp"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/imageOverlay"
        android:layout_width="120dp"
        android:layout_height="198dp"
        android:layout_margin="0dp"
        android:background="@drawable/card_ripple"
        android:padding="0dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/posterImageView"
        android:background="#de5c5656"
        android:maxHeight="18dp"
        android:padding="2dp"
        android:text="Movie Title"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="12sp"

        />

</RelativeLayout>